<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:text="Complete the following to submit"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        />




        <LinearLayout
            android:id="@+id/lin01"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:weightSum="100"
            android:background="@drawable/line_border_fill"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text="NAME:"
                android:textSize="16dp"
                android:gravity="center|center_horizontal"
                />

           <EditText
               android:id="@+id/edt_name"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="75"
               android:hint="YOUR FULLNAME"
               android:fontFamily="sans-serif-condensed"

               />


        </LinearLayout>


        <LinearLayout
        android:id="@+id/lin02"
        android:layout_below="@+id/lin01"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:weightSum="100"
        android:background="@drawable/line_border_fill"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:text="EMAIL:"
            android:textSize="16dp"
            android:gravity="center|center_horizontal"
            />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="75"
            android:hint="name@example.com"
            android:fontFamily="sans-serif-condensed"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lin02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >

    <RadioButton
        android:id="@+id/radioAgree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agree to Pixlee"
        android:textSize="12sp"
        android:layout_weight="30"
        android:fontFamily="sans-serif-condensed"

        />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_light"
            android:layout_weight="60"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="submit"
        android:layout_margin="15dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:background="#808080"
        />




    </RelativeLayout>


